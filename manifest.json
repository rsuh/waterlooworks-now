{
  "manifest_version": 2,

  "name": "Make WaterlooWorks Great Again",
  "description": "This extension improves WaterlooWorks",
  "version": "1.1",

  "author": "Gurpreet Gill and Peyman Gardideh",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "MWGA"
  },
  "permissions": [
    "tabs",
    "https://waterlooworks.uwaterloo.ca/myAccount/co-op/coop-postings.htm",
    "https://api.glassdoor.com/api/api.htm"
  ],
  "content_scripts": [
    {
      "matches": ["https://waterlooworks.uwaterloo.ca/myAccount/co-op/coop-postings.htm"],
      "js": [
        "js/jquery.min.js",
        "js/mustache.min.js",
        "js/content_script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/*",
    "css/content.css",
    "js/mustache.min.js",
    "overlay_template.html"
  ]
}
