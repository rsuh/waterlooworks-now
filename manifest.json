{
  "manifest_version": 2,

  "name": "Make WaterlooWorks Great Again",
  "description": "This extension improves WaterlooWorks",
  "version": "1.0",

  "author": "Gurpreet Gill and Peyman Gardideh",

  "browser_action": {
    "default_icon": "./images/icon.png", //TODO; change icon pic to something else
    "default_popup": "popup.html",
    "default_title": "MWWGA"
  },
  "permissions": [
    "tabs", "https://waterlooworks.uwaterloo.ca/myAccount/co-op/coop-postings.htm"
  ],
  "content_scripts": [
    {
      "matches": ["https://waterlooworks.uwaterloo.ca/myAccount/co-op/coop-postings.htm"],
      "js": ["./js/jquery.min.js", "./js/content_script.js"]
    }
  ],
  "web_accessible_resources":[
    "images/*.png"
  ]
}
